  <script>
    // UI mínimos: menu toggle (móvil), formulario demo y año dinámico.
    document.getElementById('year').textContent = new Date().getFullYear();

    // menú hamburguesa abre/ cierra nav simple
    const menuBtn = document.getElementById('menuBtn');
    menuBtn && menuBtn.addEventListener('click', () => {
      const navUl = document.querySelector('nav ul');
      if (!navUl) return;
      navUl.style.display = navUl.style.display === 'flex' ? 'none' : 'flex';
      navUl.style.flexDirection = 'column';
      navUl.style.background = 'rgba(255,255,255,0.02)';
      navUl.style.position = 'absolute';
      navUl.style.right = '24px';
      navUl.style.top = '64px';
      navUl.style.padding = '12px';
      navUl.style.borderRadius = '8px';
      navUl.style.boxShadow = '0 8px 24px rgba(2,6,23,0.12)';
    });

    // Demo: validación simple y "envío" simulado
    const form = document.getElementById('contactForm');
    const status = document.getElementById('status');
    const sendBtn = document.getElementById('sendBtn');
    sendBtn && sendBtn.addEventListener('click', () => {
      if (!form.checkValidity()) {
        form.reportValidity();
        return;
      }
      sendBtn.disabled = true;
      status.textContent = 'Enviando...';

      // simulamos envío (aquí podrías integrar fetch() a un endpoint real)
      setTimeout(() => {
        status.textContent = 'Mensaje enviado. ¡Gracias!';
        sendBtn.disabled = false;
        form.reset();
      }, 900);
    });
  </script>
